#include <stdio.h>
#include <stdint.h>
#include <string.h>

#define ROTRIGHT(a,b) (((a) >> (b)) | ((a) << (32-(b))))
#define CH(x,y,z) (((x) & (y)) ^ (~(x) & (z)))
#define MAJ(x,y,z) (((x) & (y)) ^ ((x) & (z)) ^ ((y) & (z)))
#define EP0(x) (ROTRIGHT(x,2) ^ ROTRIGHT(x,13) ^ ROTRIGHT(x,22))
#define EP1(x) (ROTRIGHT(x,6) ^ ROTRIGHT(x,11) ^ ROTRIGHT(x,25))
#define SIG0(x) (ROTRIGHT(x,7) ^ ROTRIGHT(x,18) ^ ((x) >> 3))
#define SIG1(x) (ROTRIGHT(x,17) ^ ROTRIGHT(x,19) ^ ((x) >> 10))

uint32_t K[64] = {
0x428a2f98,0x71374491,0xb5c0fbcf,0xe9b5dba5,0x3956c25b,0x59f111f1,0x923f82a4,0xab1c5ed5,
0xd807aa98,0x12835b01,0x243185be,0x550c7dc3,0x72be5d74,0x80deb1fe,0x9bdc06a7,0xc19bf174,
0xe49b69c1,0xefbe4786,0x0fc19dc6,0x240ca1cc,0x2de92c6f,0x4a7484aa,0x5cb0a9dc,0x76f988da,
0x983e5152,0xa831c66d,0xb00327c8,0xbf597fc7,0xc6e00bf3,0xd5a79147,0x06ca6351,0x14292967,
0x27b70a85,0x2e1b2138,0x4d2c6dfc,0x53380d13,0x650a7354,0x766a0abb,0x81c2c92e,0x92722c85,
0xa2bfe8a1,0xa81a664b,0xc24b8b70,0xc76c51a3,0xd192e819,0xd6990624,0xf40e3585,0x106aa070,
0x19a4c116,0x1e376c08,0x2748774c,0x34b0bcb5,0x391c0cb3,0x4ed8aa4a,0x5b9cca4f,0x682e6ff3,
0x748f82ee,0x78a5636f,0x84c87814,0x8cc70208,0x90befffa,0xa4506ceb,0xbef9a3f7,0xc67178f2
};

void sha256(const uint8_t *message, uint64_t len, uint8_t hash[32]){
    uint32_t h[8] = {
        0x6a09e667,0xbb67ae85,0x3c6ef372,0xa54ff53a,
        0x510e527f,0x9b05688c,0x1f83d9ab,0x5be0cd19
    };

    uint64_t bitlen = len*8;
    uint64_t newlen = ((len + 9 + 63) / 64) * 64;
    uint8_t data[newlen];
    memset(data, 0, newlen);
    memcpy(data, message, len);
    data[len] = 0x80;
    for(int i=0;i<8;i++) data[newlen-1-i] = bitlen >> (8*i);

    for(uint64_t offset=0; offset<newlen; offset+=64){
        uint32_t W[64];
        for(int t=0;t<16;t++)
            W[t] = (data[offset+t*4] << 24) | (data[offset+t*4+1] << 16) | (data[offset+t*4+2] << 8) | (data[offset+t*4+3]);
        for(int t=16;t<64;t++)
            W[t] = SIG1(W[t-2]) + W[t-7] + SIG0(W[t-15]) + W[t-16];

        uint32_t a=h[0],b=h[1],c=h[2],d=h[3],e=h[4],f=h[5],g=h[6],h0=h[7];

        for(int t=0;t<64;t++){
            uint32_t T1 = h0 + EP1(e) + CH(e,f,g) + K[t] + W[t];
            uint32_t T2 = EP0(a) + MAJ(a,b,c);
            h0 = g; g=f; f=e; e=d+T1; d=c; c=b; b=a; a=T1+T2;
        }

        h[0]+=a; h[1]+=b; h[2]+=c; h[3]+=d; h[4]+=e; h[5]+=f; h[6]+=g; h[7]+=h0;
    }

    for(int i=0;i<8;i++){
        hash[i*4] = (h[i] >> 24) & 0xff;
        hash[i*4+1] = (h[i] >> 16) & 0xff;
        hash[i*4+2] = (h[i] >> 8) & 0xff;
        hash[i*4+3] = h[i] & 0xff;
    }
}

int main(){
    const char *msg = "hello";
    uint8_t hash[32];
    sha256((uint8_t*)msg, strlen(msg), hash);
    printf("SHA-256: ");
    for(int i=0;i<32;i++) printf("%02x", hash[i]);
    printf("\n");
    return 0;
}
